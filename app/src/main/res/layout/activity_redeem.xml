<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".Redeem">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Payment Modes"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/payTm"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="4dp"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:onClick="payTm"
                app:srcCompat="@drawable/paytm" />

            <ImageButton
                android:id="@+id/gPay"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="4dp"
                android:padding="25dp"
                android:scaleType="fitCenter"
                android:onClick="gPay"
                app:srcCompat="@drawable/gpay" />

            <ImageButton
                android:id="@+id/amazonPay"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="4dp"
                android:padding="25dp"
                android:scaleType="fitCenter"
                android:onClick="amazonPay"
                app:srcCompat="@drawable/amazonpay" />

            <ImageButton
                android:id="@+id/phonePe"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="4dp"
                android:scaleType="fitCenter"
                android:onClick="phonePe"
                app:srcCompat="@drawable/phonepe" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>